

    <div class="container">

   
        <div class="row align-items-center">
            <div class="col">
                <h1>The home of <strong>delicious</strong> fresh baked pizzas</h1>
             </div>
             <div class="col">
                 <img src = "/img/hero.jpg" alt="Fresh Baked Pizza"   class="hero-img shadow-lg img-fluid" style="border-radius:100%;">
            </div>
        </div>
     
        <h2 class = "mb-3">Current Offers!</h2>
        <div class="row">
                
                <% offers.forEach(function(offer){ %>
                    <div class="col-sm-12 col-md-3 mb-3">
                        <img src="/uploads/<%= offer.image %>" alt="<%= offer.strapline %>" class = "shadow-lg img-fluid offerImage" loading="lazy" height="150px">  
                    </div>

                    <div class="col-sm-12 col-md-9 mb-3">
                        <h2 class="strapline"><%=offer.strapline%></h2>
                        <h3><%=offer.message%></h3> 
                        <p>Offer valid until: <%=offer.expirey%></p>
                    </div>
                   
                <% })%>
                
        </div>
     
    </div>

